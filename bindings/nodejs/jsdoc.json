{
    "source": {
        "include": [
            "index.js",
            "index.d.ts"
        ],
        "includePattern": ".+\\.(js|ts)$"
    },
    "opts": {
        "destination": "./docs",
        "recurse": true,
        "readme": "README.md"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": true
        }
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc",
            "closure"
        ]
    }
}